{
  "name": "sikessem.com",
  "private": true,
  "type": "module",
  "engines": {
    "bun": ">=1.0.0",
    "npm": "prefer using bun",
    "pnpm": "prefer using bun",
    "yarn": "prefer using bun"
  },
  "packageManager": "bun@1.0.11",
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://sikessem.com",
  "author": {
    "name": "SIGUI Kess√© Emmanuel",
    "email": "contact@sigui.ci",
    "url": "https://sigui.ci"
  },
  "scripts": {
    "check": "biome ci . && bun test",
    "check.format": "biome format .",
    "check.lint": "biome check .",
    "e2e": "playwright test",
    "e2e.install": "playwright install --with-deps",
    "e2e.report": "playwright show-report",
    "e2e.ui": "playwright test --ui",
    "fix": "bun run lint && bun run format",
    "format": "biome format --write .",
    "lint": "biome check --apply-unsafe .",
    "test": "bun test",
    "test.cov": "bun test --coverage",
    "test.hot": "bun test --hot",
    "test.watch": "bun test --watch"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@biomejs/biome": "1.3.3",
    "@playwright/test": "^1.39.0",
    "bun-types": "^1.0.11",
    "typescript": "^5.2.2"
  }
}
